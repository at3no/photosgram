<%= form_for(@post, url: choose_new_or_edit, :html => {:multipart => true}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.label :image %>
　<%= image_tag @post.image.thumb.url if @post.image? %>
　<%= f.file_field :image %>
　<%= f.hidden_field :image_cache %>
  <br>
  <%= f.submit %>
<% end %>

<%= link_to "投稿一覧画面にもどる", posts_path %>
