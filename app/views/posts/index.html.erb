<div class="container">
<div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<p><%= notice %></p>

<h1>投稿一覧</h1>

<%= link_to "投稿を作成する", new_post_path, class: 'btn btn-default' %>

<% @posts.each do |post| %>
  <p>タイトル:<%= post.title %></p>
  <p>本文:<%= post.content %></p>
  <p><%= image_tag post.image.thumb.url %>
  <br>
  <%= link_to "投稿を編集する", edit_post_path(post.id), class: 'btn btn-default btn-sm btn-success' %>
  <br>
  <%= link_to 'ブログを削除する', post_path(post), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn btn-danger' %>
<% end %>

</div>
</div>
<div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
