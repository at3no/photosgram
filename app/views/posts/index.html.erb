<p><%= notice %></p>

<h1>投稿一覧</h1>

<% @posts.each do |post| %>
  <p>タイトル:<%= post.title %></p>
  <p>本文:<%= post.content %></p>
  <p><%= image_tag post.image.thumb.url %>
  <br>
  <%= link_to "投稿を編集する", edit_post_path(post.id) %>
  <br>
  <%= link_to 'ブログを削除する', post_path(post), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
<% end %>
<br>
<%= link_to "投稿を作成する", new_post_path %>
